<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VehicleInfoActivity">

    <TextView
        android:id="@+id/confirm_tv"
        android:paddingTop="80sp"
        android:paddingLeft="10sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold"
        android:text="Vehicle Not Found"/>

    <ImageView
        android:id="@+id/car_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rally_car"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/confirm_tv"
        android:paddingTop="20sp"
        android:paddingBottom="40sp"/>

    <TextView
        android:id="@+id/please_search_again"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_below="@+id/car_img"
        android:layout_marginTop="-4dp"
        android:paddingTop="20sp"
        android:paddingLeft="75sp"
        android:paddingRight="75sp"
        android:text="The database could not find a vehicle registered under that VIN. Please search for a different VIN."
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/car_info_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/car_img"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingTop="20sp"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/vin_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/car_info_tv"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/btn_another"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="240dp"
        android:layout_marginLeft="243dp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:text="Search Another"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp" />



</RelativeLayout>
