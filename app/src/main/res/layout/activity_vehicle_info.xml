<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VehicleInfoActivity">

    <TextView
        android:id="@+id/confirm_tv"
        android:paddingTop="10sp"
        android:paddingLeft="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:text="Is this your vehicle? "/>

    <ImageView
        android:id="@+id/car_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rally_car"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/confirm_tv"
        android:paddingTop="20sp"/>

    <TextView
        android:id="@+id/year_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/car_img"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:paddingTop="20sp"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/make_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/year_tv"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/model_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/make_tv"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="20sp"/>

</RelativeLayout>